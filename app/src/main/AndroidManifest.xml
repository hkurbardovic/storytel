<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.storytel.candidate.com">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="app.storytel.candidate.com.app.StorytelApp"
        android:allowBackup="true"
        android:fullBackupContent="@xml/denali_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".scrolling.ScrollingActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".details.DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName=".scrolling.ScrollingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".scrolling.ScrollingActivity" />
        </activity>
    </application>
</manifest>